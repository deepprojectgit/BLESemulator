<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_10sdp">

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/btnSendTemperature"
        app:cornerRadius="5dp"
        app:backgroundTint="@color/colorSecondary"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSendPressure"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/btn_send_temperature_event_device"
        android:fontFamily="@font/lexend_regular"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_10sdp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/btnSendPressure"
        app:cornerRadius="5dp"
        app:backgroundTint="@color/colorSecondary"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@id/btnSendTemperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/btn_send_pressure_event_device"
        android:fontFamily="@font/lexend_regular"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/btnSendBatteryStatus"
        app:cornerRadius="5dp"
        app:backgroundTint="@color/colorSecondary"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnPulseOximetry"
        app:layout_constraintTop_toBottomOf="@id/btnSendTemperature"
        android:text="@string/btn_send_battery_status_event_device"
        android:fontFamily="@font/lexend_regular"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/btnPulseOximetry"
        app:cornerRadius="5dp"
        app:backgroundTint="@color/colorSecondary"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/btnSendBatteryStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSendTemperature"
        android:text="@string/btn_send_pulse_oximetry_event_device"
        android:fontFamily="@font/lexend_regular"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"/>



</androidx.constraintlayout.widget.ConstraintLayout>